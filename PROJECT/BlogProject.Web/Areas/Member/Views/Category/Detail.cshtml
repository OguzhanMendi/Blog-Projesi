@model Category
       
    <div class="card-body">
       
            

             
            <!-- /.tab-pane -->

            <div class="tab-pane active" id="settings">
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-md-6 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Name">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="inputExperience" class="col-md-6 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="@Model.Description" placeholder="Experience"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                       

                        <input type="submit" value="Geri Dön" asp-controller="Category"  asp-action="List" class="btn btn-success" style="margin-right:auto" />
                    </div>


                </form>
            </div>
            <!-- /.tab-pane -->
        </div>
        <!-- /.tab-content -->


