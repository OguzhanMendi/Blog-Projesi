@model List< AllCategoryListDTO>

<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    #
                </th>
                <th style="width: 20%">
                    Name
                </th>
                <th style="width: 30%">
                    Description
                </th>
               

                <th style="width: 20%">
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {


            <tbody>
                <tr>
                    <td>
                        #
                    </td>
                    <td>
                        <a>
                            @item.Name
                        </a>
                        <br>
                        <small>

                        </small>
                    </td>
                    <td>
                        <a>
                            @item.Description
                        </a>
                        <br>
                        <small>

                        </small>
                    </td>
                  


                    <td class="project-actions text-right">

                        @if (item.Statu != BlogProject.Model.Enums.Statu.Active)
                        {
                            <a class="btn btn-info btn-sm" asp-action="Active" asp-route-id="@item.ID">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Active
                            </a>
                        }
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                    </td>
                </tr>






                <tr>


            </tbody>
        }
    </table>
</div>